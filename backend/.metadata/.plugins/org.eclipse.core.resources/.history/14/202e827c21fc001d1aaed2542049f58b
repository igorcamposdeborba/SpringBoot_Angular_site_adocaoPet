package com.adocao.pet.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.adocao.pet.entities.Ong;
import com.adocao.pet.entities.Pet;
import com.adocao.pet.repositories.PetRepository;
import com.adocao.pet.services.exceptions.ObjectNotFoundException;

@Service // injetar instancias em outras partes do c처digo
public class PetService {

	@Autowired
	private PetRepository petRepository;
	
	@Autowired
	private Ong ongRepository;
	

	public Pet findById(Integer id) {
		Optional<Pet> obj = petRepository.findById(id); // Optional: pode ou n찾o encontrar o valor no banco de dados. Ele N찾o admite null
		
		return obj.orElseThrow(() -> new ObjectNotFoundException("Objeto n찾o encontrado pelo id " + id));
	}

	
	public List<Pet> findAll(){
		return petRepository.findAll();
	}

}
